{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "love",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json",
    },
    "plugins": [
        "typescript-eslint/eslint-plugin", "eslint-plugin-tsdoc"
    ],
    "parser": "@typescript-eslint/parser",   
    "rules": {
        "tsdoc/syntax": "warn"
    }
}